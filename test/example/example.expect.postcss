body {
  margin: 0;
}

@media all and (max-width: 699px) {
  h1 {
    font-size: 18px;
    color: aquamarine;
  }

  p {
    font-size: 12px;
  }
}

@media all and (min-width: 700px) and (max-width: 1249px) {
  h1 {
    font-size: 20px;
    color: maroon;
  }

  p {
    font-size: 14px;
  }
}

@media all and (min-width: 1250px) and (max-width: 1439px) {
  h1 {
    font-size: 22px;
    color: teal;
  }

  p {
    font-size: 16px;
  }
}

@media all and (min-width: 1440px) {
  h1 {
    font-size: 24px;
    color: mintcream;
  }

  p {
    font-size: 18px;
  }
}

a {
  text-decoration: none;
}
